<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_wea_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/current_cloudy"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/item_wea_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#6495ED"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_wea_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期:XXXX.XX.XX"
            android:textColor="#6495ED"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_wea_tv_wind_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风向: 风级:"
            android:textColor="#6495ED"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_wea_tv_aqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气质量指数"
            android:textColor="#6495ED"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_wea_tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高温 低温"
            android:textColor="#6495ED"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_wea_tv_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="注意
雷雨闪电时，应切断电器电源，以免损坏"
        android:textColor="#6495ED"
        android:textSize="12sp" />

</LinearLayout>