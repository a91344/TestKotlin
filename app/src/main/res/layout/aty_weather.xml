<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wea_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wea_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="当前城市:XX"
            android:textColor="#6495ED"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wea_tv_temperature_or_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="温度:XX
质量:XX"
            android:textColor="#6495ED"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wea_tv_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="PM25:XX
PM10:XX"
            android:textColor="#6495ED"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wea_tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="湿度:%66"
            android:textColor="#6495ED"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6495ED" />

    <TextView
        android:id="@+id/wea_tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="注意:极少数敏感人群应减少户外活动"
        android:textColor="#6495ED"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6495ED" />

    <ListView
        android:id="@+id/wea_lv_datas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>